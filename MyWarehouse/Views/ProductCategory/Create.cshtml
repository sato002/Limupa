<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><a class="text-muted fw-light" href="/ProductCategory">Danh mục sản phẩm /</a> Tạo mới</h4>

    <!-- Basic Bootstrap Table -->
    <!-- Basic Layout -->
    <div class="row">
        <div class="col-xl">
            <div class="card mb-4">
                <div class="card-body">
                    <form id="frmCategory">
                        <div class="row">
                            <div class="mb-3 col-md-4">
                                <label class="form-label" for="basic-default-fullname">Tên danh mục</label>
                                <input type="text" class="form-control" name="Name" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="mb-3 col-md-4">
                                <label class="form-label" for="basic-default-message">Mô tả</label>
                                <textarea name="Description"
                                          class="form-control"></textarea>
                            </div>
                        </div>
                        <div class="row">
                            <div class="mb-3 col-md-2">
                                <label class="form-label" for="basic-default-fullname">Thứ tự</label>
                                <input type="text" class="form-control" name="Sort" />
                            </div>
                            <div class="mb-3 col-md-2">
                                <label class="form-label" for="basic-default-fullname">Hiển thị ở trang chủ</label>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" name="IsHomePage" checked="">
                                    <label class="form-check-label" for="defaultCheck3"></label>
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-outline-primary" id="btnCreate">Thêm mới</button>
                        <button type="reset" class="btn btn-outline-secondary">Hủy</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!--/ Basic Bootstrap Table -->
</div>

