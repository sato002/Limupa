@using Base.Entity.ViewModels;
@model MainProductViewModel
@{
    Layout = null;
}

@if (Model != null && Model.MainCategories != null && Model.MainCategories.Count > 0)
{
    foreach (var cate in Model.MainCategories)
    {
        var newProducts = Model.AllNewProducts.Where(_ => _.CategoryId == cate.Id).ToList();
        var bestsellerProducts = Model.AllBestsellerProducts.Where(_ => _.CategoryId == cate.Id).ToList();
        var featureProducts = Model.AllFeaturedProducts.Where(_ => _.CategoryId == cate.Id).ToList();

        <!-- Begin Li's Trending Product Area -->
        <section class="product-area li-trending-product pt-60 pb-45">
            <div class="container">
                <div class="row">
                    <!-- Begin Li's Tab Menu Area -->
                    <div class="col-lg-12">
                        <div class="li-product-tab li-trending-product-tab">
                            <h2>
                                <span>@cate.Name</span>
                            </h2>
                            <ul class="nav li-product-menu li-trending-product-menu">
                                <li><a class="active" data-toggle="tab" href="#home1"><span>Mới về</span></a></li>
                                <li><a data-toggle="tab" href="#home2"><span>Bán chạy</span></a></li>
                                <li><a data-toggle="tab" href="#home3"><span>Nổi bật</span></a></li>
                            </ul>
                        </div>
                        <!-- Begin Li's Tab Menu Content Area -->
                        <div class="tab-content li-tab-content li-trending-product-content">
                            <div id="home1" class="tab-pane show fade in active">
                                <div class="row">
                                    <div class="product-active owl-carousel">
                                        @foreach (var product in newProducts)
                                        {
                                            <div class="col-lg-12">
                                                @{Html.RenderPartial("_SingleProduct", product);}
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                            <div id="home2" class="tab-pane fade">
                                <div class="row">
                                    <div class="product-active owl-carousel">
                                        <div class="col-lg-12">
                                            @foreach (var product in newProducts)
                                            {
                                                <div class="col-lg-12">
                                                    @{Html.RenderPartial("_SingleProduct", product);}
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div id="home3" class="tab-pane fade">
                                <div class="row">
                                    <div class="product-active owl-carousel">
                                        <div class="col-lg-12">
                                            @foreach (var product in newProducts)
                                            {
                                                <div class="col-lg-12">
                                                    @{Html.RenderPartial("_SingleProduct", product);}
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Tab Menu Content Area End Here -->
                    </div>
                    <!-- Tab Menu Area End Here -->
                </div>
            </div>
        </section>
        <!-- Li's Trending Product Area End Here -->
    }
}

