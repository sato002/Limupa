@using Base.Entity.ViewModels;
@model ProductViewModel

@{ 
    Layout = null;
}

<div class="col-lg-12">
    <!-- single-product-wrap start -->
    <div class="single-product-wrap frmSingleProduct" data-productId="@Model.Id">
        <div class="product-image">
            <a href="/Product/Index/@Model.Id">
                <img src="@Model.ImageUrl@Model.MainImage">
            </a>
            @*<span class="sticker">New</span>*@
        </div>
        <div class="product_desc">
            <div class="product_desc_info">
                <div class="product-review">
                </div>
                <h4><a class="product_name" href="/Product/Index/@Model.Id">@Model.Name</a></h4>
                <div class="price-box">
                    <span class="new-price">@Model.Price</span>
                </div>
            </div>
            <div class="add-actions">
                <ul class="add-actions-link">
                    <li class="add-cart active"><a href="#" class="btnAddToCart">Thêm vào giỏ</a></li>
                </ul>
            </div>
        </div>
    </div>
    <!-- single-product-wrap end -->
</div>